<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Wave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrymary"
            android:src="@drawable/ic_gelombang" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="220dp"
        android:layout_height="400dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/left_panel">

        <TextView
            android:id="@+id/Hallo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Hello Sukma !"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:layout_marginTop="18dp"/>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/login"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtServer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrymary"
                android:hint="Server Address"
                android:textColorHint="@color/colorPrymary"/>

            <EditText
                android:id="@+id/edtId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                android:hint="Username"
                android:textColorHint="@color/colorPrymary" />

            <EditText
                android:id="@+id/edtKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                android:hint="Password"
                android:textColorHint="@color/colorPrymary"/>

            <CheckBox
                android:id="@+id/Remember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text="Remember Me !"
                android:textColor="@color/colorPrymary"
                android:textSize="16dp"/>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="100dp"
                android:text="Login"
                app:backgroundTint="#009688" />


        </LinearLayout>

</RelativeLayout>